<project name="buildPluginDist" default="build" basedir="../">
  <property name="build.dir" location="build" />
  <property name="build.tmp" location="${build.dir}/tmp/buildPluginDist" />
  <property name="build.layout" location="${build.dir}/artifacts/buildPluginDist" />
  <property name="plugin.version" value="1.0.SNAPSHOT" />
  <property name="artifacts.buildPlugin" location="${build.dir}/artifacts/buildPlugin" />
  <property file="${artifacts.buildPlugin}/build.properties" prefix="import.buildPlugin" />
  <property name="buildPlugin.plugin.version" value="${import.buildPlugin.buildPlugin.plugin.version}" />
  
  <target name="assemble" depends="fetchDependencies">
    <zip destfile="${build.layout}/mps-core-${plugin.version}.zip">
      <fileset dir="${artifacts.buildPlugin}/plugins" />
    </zip>
    <echo file="${build.layout}/build.properties">buildPluginDist.plugin.version=${plugin.version}${line.separator}buildPlugin.plugin.version=${buildPlugin.plugin.version}</echo>
  </target>
  
  <target name="buildDependents">
    <ant antfile="IdeaPlugin/buildPlugin.xml" inheritAll="false" useNativeBasedir="true" />
  </target>
  
  <target name="fetchDependencies" />
  
  <target name="build" depends="assemble" />
  
  <target name="clean">
    <delete dir="${build.tmp}" />
    <delete dir="${build.layout}" />
  </target>
</project>