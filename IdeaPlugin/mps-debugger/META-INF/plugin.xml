<idea-plugin version="2">
  <id>jetbrains.mps.debugger</id>
  <name>MPS Java Debugger Support</name>
  <description>Java debugger integration with MPS plugin</description>
  <version>1.0</version>
  <vendor>JetBrains</vendor>
  <idea-version since-build="8000"/>

  <depends>jetbrains.mps.core</depends>

  <project-components>
    <component><implementation-class>jetbrains.mps.idea.debugger.IdeaDebuggerPositionHighlighter</implementation-class></component>
    <component>
      <implementation-class>jetbrains.mps.idea.debugger.breakpoints.IdeaBreakpointsUiComponent</implementation-class>
    </component>
  </project-components>

  <extensions defaultExtensionNs="com.intellij">
    <debugger.positionManagerFactory implementation="jetbrains.mps.idea.debugger.MpsPositionManagerFactory"/>
  </extensions>
</idea-plugin>
