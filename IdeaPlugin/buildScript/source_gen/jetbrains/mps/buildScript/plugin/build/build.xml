<project name="build">
  <property name="idea_home" location="" />
  <property name="mps_libs" location="${basedir}/../../lib" />
  <property name="mps_langs" location="${basedir}/../../languages" />
  <property name="build.tmp" location="${basedir}/build/tmp/build.tmp" />
  <property name="build.deploy.dir" location="${basedir}/build/artifacts/build.artifacts" />
  <property name="build.dir" location="build" />
  
  <path id="path.java.library.core-libraries">
    <fileset dir="${idea_home}/lib">
      <include name="org.eclipse.jdt.core_3.5.2.v_981_R35x.jar" />
      <include name="guava-r09.jar" />
      <include name="jdom.jar" />
      <include name="log4j.jar" />
      <include name="trove4j.jar" />
      <include name="xstream.jar" />
      <include name="annotations.jar" />
      <include name="commons-lang-2.4.jar" />
      <include name="commons-logging-1.1.1.jar" />
    </fileset>
    <fileset file="${mps_libs}/asm.jar" />
    <fileset file="${mps_libs}/diffutils-1.2.1.jar" />
  </path>
  
  <target name="java.compile.mps-tuples">
    <mkdir dir="${build.dir}/tmp/java.out.mps-tuples" />
    <javac destdir="${build.dir}/tmp/java.out.mps-tuples">
      <compilerarg value="-Xlint:none" />
      <src path="${mps_langs}/baseLanguage/tuples/runtime/source_gen" />
      <classpath></classpath>
    </javac>
  </target>
  
  <target name="java.compile.mps-closures">
    <mkdir dir="${build.dir}/tmp/java.out.mps-closures" />
    <javac destdir="${build.dir}/tmp/java.out.mps-closures">
      <compilerarg value="-Xlint:none" />
      <src path="${mps_langs}/baseLanguage/closures/runtime/source_gen" />
      <classpath></classpath>
    </javac>
  </target>
  
  <target name="java.compile.mps-collections" depends="java.compile.mps-closures">
    <mkdir dir="${build.dir}/tmp/java.out.mps-collections" />
    <javac destdir="${build.dir}/tmp/java.out.mps-collections">
      <compilerarg value="-Xlint:none" />
      <src path="${mps_langs}/baseLanguage/collections/runtime/source_gen" />
      <classpath path="${build.dir}/tmp/java.out.mps-closures" />
    </javac>
  </target>
  
  <target name="build" depends="check, assemble" />
  
  <target name="clean">
    <delete dir="${build.dir}" />
  </target>
  
  <target name="compileJava" depends="java.compile.mps-tuples, java.compile.mps-closures, java.compile.mps-collections" />
  
  <target name="processResources" />
  
  <target name="classes" depends="compileJava, processResources" />
  
  <target name="assemble" depends="classes">
    <mkdir dir="${build.deploy.dir}/mps-core" />
    <mkdir dir="${build.deploy.dir}/mps-core/lib" />
    <jar destfile="${build.deploy.dir}/mps-core/lib/mps-tuples.jar">
      <fileset dir="${build.dir}/tmp/java.out.mps-tuples" />
    </jar>
    <jar destfile="${build.deploy.dir}/mps-core/lib/mps-closures.jar">
      <fileset dir="${build.dir}/tmp/java.out.mps-closures" />
    </jar>
    <jar destfile="${build.deploy.dir}/mps-core/lib/mps-collections.jar">
      <fileset dir="${build.dir}/tmp/java.out.mps-collections" />
    </jar>
  </target>
  
  <target name="test" depends="classes" />
  
  <target name="check" depends="test" />
</project>