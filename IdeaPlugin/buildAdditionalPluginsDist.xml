<project name="buildAdditionalPluginsDist" default="build" basedir="../">
  <!-- Generated by MPS -->
  <property name="build.dir" location="build" />
  <property name="build.tmp" location="${build.dir}/tmp/buildAdditionalPluginsDist" />
  <property name="build.layout" location="${build.dir}/artifacts/buildAdditionalPluginsDist" />
  <property name="plugin.version" value="1.0.SNAPSHOT" />
  <property name="artifacts.buildDates" location="${build.dir}/artifacts/buildDates" />
  <property name="artifacts.buildDeprecatedBuildlanguage" location="${build.dir}/artifacts/buildDeprecatedBuildlanguage" />
  <property file="${artifacts.buildDates}/build.properties" prefix="import.buildDates" />
  <property name="buildBootstrapCore.version" value="${import.buildDates.buildBootstrapCore.version}" />
  
  <target name="assemble" depends="fetchDependencies">
    <mkdir dir="${build.layout}" />
    <zip destfile="${build.layout}/${plugin.version}-additional-plugin.zip">
      <zipfileset dir="${artifacts.buildDates}/mps-dates" prefix="mps-dates" />
      <zipfileset dir="${artifacts.buildDeprecatedBuildlanguage}/mps-obsolete" prefix="mps-obsolete" />
    </zip>
    <echo file="${build.layout}/build.properties">buildAdditionalPluginsDist.plugin.version=${plugin.version}${line.separator}buildBootstrapCore.version=${buildBootstrapCore.version}</echo>
  </target>
  
  <target name="buildDependents">
    <ant antfile="build/buildDates.xml" inheritAll="false" useNativeBasedir="true" />
    <ant antfile="build/buildDeprecatedBuildlanguage.xml" inheritAll="false" useNativeBasedir="true" />
  </target>
  
  <target name="fetchDependencies" />
  
  <target name="build" depends="assemble" />
  
  <target name="clean">
    <delete dir="${build.tmp}" />
    <delete dir="${build.layout}" />
  </target>
</project>