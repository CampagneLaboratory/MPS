<project name="TestGenerateTask">
    <property name="module.home" value="${ant.file}/../../../../../.."/>

    <path id="tasks.class.path">
        <pathelement path="${module.home}/classes"/>
    </path>

    <taskdef resource="jetbrains/mps/build/ant/antlib.xml"
             classpathref="tasks.class.path"/>

    <target name="testBuildException">
        <generate/>
    </target>

    <target name="testNormalWork">
        <generate mpshome="${module.home}/../../../">
            <project file="${module.home}/../../../samples/complexLanguage/Complex.mpr"/>
        </generate>
    </target>

    <target name="testNormalWorkWithModels">
        <generate mpshome="${module.home}/../../../">
            <models srcdir="${module.home}/../../../samples/complexLanguage"/>
        </generate>
    </target>

    <target name="testNormalWorkWithModules">
        <generate mpshome="${module.home}/../../../">
            <modules srcdir="${module.home}/../../../samples/complexLanguage"/>
        </generate>
    </target>

    <target name="testFailOnGenerationError">
        <generate mpshome="${module.home}/../../../" failonerror="true">
            <project file="${module.home}/testProjects/failedProject/FailedProject.mpr"/>
        </generate>
    </target>

    <target name="testModelsWithBuildException">
        <generate>
            <models/>
        </generate>
    </target>

</project>
