<project name="TestGenerateTask">
    <property name="module.home" value="${ant.file}/../../../../../.."/>
    <property name="test.projects.home" value="${module.home}/testProjects"/>

    <path id="tasks.class.path">
        <pathelement path="${module.home}/classes"/>
    </path>

    <taskdef resource="jetbrains/mps/build/ant/antlib.xml"
             classpathref="tasks.class.path"/>

    <target name="testBuildException">
        <generate/>
    </target>

    <target name="testNormalWork">
        <generate mpshome="${module.home}/../../.." loglevel="info">
            <project file="${module.home}/../../../samples/complexLanguage/Complex.mpr"/>
        </generate>
    </target>

    <target name="testNormalWorkWithModels">
        <generate mpshome="${module.home}/../../..">
            <models dir="${module.home}/../../../samples/complexLanguage"/>
        </generate>
    </target>

    <target name="testNormalWorkWithModules">
        <generate mpshome="${module.home}/../../..">
            <modules dir="${module.home}/../../../samples/complexLanguage"/>
        </generate>
    </target>

    <target name="testFailOnGenerationError">
        <unzip src="${test.projects.home}/failedProject.zip" dest="${test.projects.home}"/>
        <generate mpshome="${module.home}/../../.." failonerror="true" loglevel="info">
            <project file="${test.projects.home}/failedProject/FailedProject.mpr"/>
        </generate>
        <delete dir="${test.projects.home}/failedProject"/>
    </target>

    <target name="testSuccess">
        <unzip src="${test.projects.home}/successfulProject.zip" dest="${test.projects.home}"/>
        <generate mpshome="${module.home}/../../.." failonerror="true" loglevel="debug">
            <project file="${test.projects.home}/SuccessfulProject/SuccessfulProject.mpr"/>
        </generate>
        <delete dir="${test.projects.home}/SuccessfulProject"/>
    </target>

    <target name="testModelsWithBuildException">
        <generate>
            <models/>
        </generate>
    </target>

    <target name="testLibraries">
        <property name="mps.webr-dnq" value="${module.home}/../../../../webr-dnq"/>
        <generate mpshome="${module.home}/../../.." usepropertiesasmacro="true">
            <library name="webr-dnq" dir="${mps.webr-dnq}"/>
            <modules dir="${module.home}/../../../../charisma"/>
        </generate>
    </target>

</project>
