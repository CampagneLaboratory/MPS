<project name="buildWorkbench" default="build" basedir="../">
  <property name="build.dir" location="build" />
  <property name="build.tmp" location="${build.dir}/tmp/buildWorkbench" />
  <property name="build.layout" location="${build.dir}/artifacts/buildWorkbench" />
  <property name="mps_home" location="${basedir}" />
  <property name="artifacts.buildCore" location="${build.dir}/artifacts/buildCore" />
  
  <target name="assemble" depends="classes" />
  
  <target name="buildDependents">
    <ant antfile="build/buildCore.xml" inheritAll="false" useNativeBasedir="true" />
  </target>
  
  <target name="fetchDependencies" />
  
  <target name="build" depends="assemble, check" />
  
  <target name="clean">
    <delete dir="${build.tmp}" />
    <delete dir="${build.layout}" />
  </target>
  
  <target name="compileJava" depends="java.compile.typesystem-ui, java.compile.mps-workbench, java.compile.execution, java.compile.jetbrains.mps.uiLanguage, java.compile.jetbrains.mps.ide.uiLanguage, java.compile.jetbrains.mps.lang.plugin.standalone" />
  
  <target name="processResources" />
  
  <target name="classes" depends="compileJava, processResources" />
  
  <target name="test" depends="classes" />
  
  <target name="check" depends="test" />
  
  <target name="java.compile.typesystem-ui" depends="fetchDependencies">
    <mkdir dir="${build.tmp}/java/out/typesystem-ui" />
    <javac destdir="${build.tmp}/java/out/typesystem-ui" fork="true" memorymaximumsize="1024m" includeantruntime="false">
      <compilerarg value="-Xlint:none" />
      <src>
        <path location="${mps_home}/workbench/typesystemUi/source" />
      </src>
      <classpath>
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-closures.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-collections.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-tuples.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-core.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-editor-api.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-editor.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-platform.jar" />
      </classpath>
    </javac>
  </target>
  
  <target name="java.compile.mps-workbench" depends="fetchDependencies">
    <mkdir dir="${build.tmp}/java/out/mps-workbench" />
    <javac destdir="${build.tmp}/java/out/mps-workbench" fork="true" memorymaximumsize="1024m" includeantruntime="false">
      <compilerarg value="-Xlint:none" />
      <src>
        <path location="${mps_home}/workbench/mps-workbench/source" />
        <path location="${mps_home}/workbench/mps-workbench/source_gen" />
      </src>
      <classpath>
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-closures.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-collections.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-tuples.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-core.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-platform.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-editor-api.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-editor.jar" />
      </classpath>
    </javac>
  </target>
  
  <target name="java.compile.execution" depends="fetchDependencies">
    <mkdir dir="${build.tmp}/java/out/execution" />
    <javac destdir="${build.tmp}/java/out/execution" fork="true" memorymaximumsize="1024m" includeantruntime="false">
      <compilerarg value="-Xlint:none" />
      <src>
        <pathelement path="${basedir}/languages/util/runConfigurations/solutions/jetbrains.mps.execution.api/source_gen" />
        <pathelement path="${basedir}/languages/util/runConfigurations/solutions/jetbrains.mps.execution.impl/source_gen" />
      </src>
      <classpath>
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-closures.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-collections.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-tuples.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-core.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-platform.jar" />
      </classpath>
    </javac>
  </target>
  
  <target name="java.compile.jetbrains.mps.uiLanguage" depends="fetchDependencies">
    <mkdir dir="${build.tmp}/java/out/jetbrains.mps.uiLanguage" />
    <javac destdir="${build.tmp}/java/out/jetbrains.mps.uiLanguage" fork="true" memorymaximumsize="1024m" includeantruntime="false">
      <compilerarg value="-Xlint:none" />
      <src>
        <path location="${basedir}/languages/util/uiLanguage/source_gen" />
      </src>
      <classpath>
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-closures.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-collections.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-tuples.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-core.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-editor-api.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-editor.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-platform.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/languages/baseLanguage/jetbrains.mps.baseLanguage.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/languages/baseLanguage/jetbrains.mps.baseLanguage.blTypes.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/languages/baseLanguage/jetbrains.mps.baseLanguage.classifiers.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/languages/baseLanguage/jetbrains.mps.baseLanguage.closures.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/languages/baseLanguage/jetbrains.mps.baseLanguage.collections.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/languages/languageDesign/jetbrains.mps.lang.core.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/languages/languageDesign/jetbrains.mps.lang.test.runtime.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/languages/languageDesign/jetbrains.mps.lang.traceable.jar" />
      </classpath>
    </javac>
  </target>
  
  <target name="java.compile.jetbrains.mps.ide.uiLanguage" depends="java.compile.jetbrains.mps.uiLanguage, fetchDependencies">
    <mkdir dir="${build.tmp}/java/out/jetbrains.mps.ide.uiLanguage" />
    <javac destdir="${build.tmp}/java/out/jetbrains.mps.ide.uiLanguage" fork="true" memorymaximumsize="1024m" includeantruntime="false">
      <compilerarg value="-Xlint:none" />
      <src>
        <path location="${basedir}/languages/util/ideUiLanguage/source_gen" />
      </src>
      <classpath>
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-closures.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-collections.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-tuples.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-core.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-editor-api.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-editor.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-platform.jar" />
        <pathelement path="${build.tmp}/java/out/jetbrains.mps.uiLanguage" />
        <fileset file="${artifacts.buildCore}/mps-core/languages/baseLanguage/jetbrains.mps.baseLanguage.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/languages/baseLanguage/jetbrains.mps.baseLanguage.blTypes.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/languages/baseLanguage/jetbrains.mps.baseLanguage.classifiers.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/languages/baseLanguage/jetbrains.mps.baseLanguage.closures.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/languages/baseLanguage/jetbrains.mps.baseLanguage.collections.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/languages/languageDesign/jetbrains.mps.lang.core.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/languages/languageDesign/jetbrains.mps.lang.test.runtime.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/languages/languageDesign/jetbrains.mps.lang.traceable.jar" />
      </classpath>
    </javac>
  </target>
  
  <target name="java.compile.jetbrains.mps.lang.plugin.standalone" depends="fetchDependencies">
    <mkdir dir="${build.tmp}/java/out/jetbrains.mps.lang.plugin.standalone" />
    <javac destdir="${build.tmp}/java/out/jetbrains.mps.lang.plugin.standalone" fork="true" memorymaximumsize="1024m" includeantruntime="false">
      <compilerarg value="-Xlint:none" />
      <src>
        <path location="${basedir}/languages/languageDesign/plugin-standalone/source_gen" />
      </src>
      <classpath>
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-closures.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-collections.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-tuples.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-core.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/lib/mps-platform.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/languages/baseLanguage/jetbrains.mps.baseLanguage.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/languages/baseLanguage/jetbrains.mps.baseLanguage.blTypes.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/languages/baseLanguage/jetbrains.mps.baseLanguage.classifiers.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/languages/baseLanguage/jetbrains.mps.baseLanguage.closures.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/languages/baseLanguage/jetbrains.mps.baseLanguage.collections.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/languages/baseLanguage/jetbrains.mps.baseLanguage.tuples.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/languages/languageDesign/jetbrains.mps.lang.checkedName.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/languages/languageDesign/jetbrains.mps.lang.core.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/languages/languageDesign/jetbrains.mps.lang.plugin.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/languages/languageDesign/jetbrains.mps.lang.test.runtime.jar" />
        <fileset file="${artifacts.buildCore}/mps-core/languages/languageDesign/jetbrains.mps.lang.traceable.jar" />
      </classpath>
    </javac>
  </target>
</project>