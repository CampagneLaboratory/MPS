<project name="cleanGit" default="clean" basedir="..">
  
  <target name="clean">
    <exec executable="git">
      <arg value="clean"/>
      <arg value="-dfx"/>
    </exec>
  </target>

  <target name="mpsFriendlyClean" description="Exclude 'classes_gen' from full clean">
    <exec executable="git">
      <arg value="clean"/>
      <arg value="-dfx --exclude=*classes_gen*"/>
    </exec>
  </target>

</project>
