<project name="buildMakePlugin" default="build" basedir="../">
  <!-- Generated by MPS -->
  <property name="build.dir" location="build" />
  <property name="build.tmp" location="${build.dir}/tmp/buildMakePlugin" />
  <property name="build.layout" location="${build.dir}/artifacts/buildMakePlugin" />
  <property name="idea_home" location="" />
  <property name="mps_home" location="${basedir}" />
  <property name="artifacts.buildBootstrapCore" location="${build.dir}/artifacts/buildBootstrapCore" />
  <property name="artifacts.buildCore" location="${build.dir}/artifacts/buildCore" />
  <property name="artifacts.buildWorkbench" location="${build.dir}/artifacts/buildWorkbench" />
  <property name="artifacts.buildTroveCollections" location="${build.dir}/artifacts/buildTroveCollections" />
  <property name="artifacts.IDEA" location="${idea_home}" />
  <property file="${artifacts.buildBootstrapCore}/build.properties" prefix="import.buildBootstrapCore" />
  <property name="buildBootstrapCore.version" value="${import.buildBootstrapCore.buildBootstrapCore.version}" />
  
  <path id="path.javac2.classpath">
    <fileset dir="${idea_home}/lib">
      <include name="javac2.jar" />
      <include name="jdom.jar" />
      <include name="asm4-all.jar" />
      <include name="jgoodies-forms.jar" />
    </fileset>
  </path>
  
  <path id="path.jdk.classpath">
    <pathelement path="${java.home}/../Classes/classes.jar" />
    <fileset dir="${java.home}">
      <include name="lib/*.jar" />
    </fileset>
  </path>
  
  <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="path.javac2.classpath" />
  
  <target name="assemble" depends="classes">
    <mkdir dir="${build.layout}" />
    <jar destfile="${build.layout}/mps-make.jar">
      <fileset dir="${build.tmp}/java/out/mps-make" />
      <zipfileset file="${mps_home}/plugins/mpsmake/META-INF/plugin.xml" prefix="META-INF" />
    </jar>
    <echo file="${build.layout}/build.properties">buildBootstrapCore.version=${buildBootstrapCore.version}</echo>
  </target>
  
  <target name="buildDependents">
    <ant antfile="build/buildBootstrapCore.xml" inheritAll="false" useNativeBasedir="true" />
    <ant antfile="build/buildCore.xml" inheritAll="false" useNativeBasedir="true" />
    <ant antfile="build/buildWorkbench.xml" inheritAll="false" useNativeBasedir="true" />
    <ant antfile="build/buildTroveCollections.xml" inheritAll="false" useNativeBasedir="true" />
  </target>
  
  <target name="fetchDependencies" />
  
  <target name="build" depends="assemble, check" />
  
  <target name="clean">
    <delete dir="${build.tmp}" />
    <delete dir="${build.layout}" />
  </target>
  
  <target name="compileJava" depends="java.compile.mps-make" />
  
  <target name="processResources" />
  
  <target name="classes" depends="compileJava, processResources" />
  
  <target name="test" depends="classes" />
  
  <target name="check" depends="test" />
  
  <target name="java.compile.mps-make" depends="fetchDependencies">
    <mkdir dir="${build.tmp}/java/out/mps-make" />
    <javac2 destdir="${build.tmp}/java/out/mps-make" fork="true" memorymaximumsize="1024m" includeantruntime="false" debug="true">
      <compilerarg value="-Xlint:none" />
      <src>
        <path location="${mps_home}/plugins/mpsmake/source_gen" />
      </src>
      <classpath>
        <fileset file="${artifacts.buildBootstrapCore}/lib/mps-openapi.jar" />
        <fileset file="${artifacts.buildBootstrapCore}/lib/mps-closures.jar" />
        <fileset file="${artifacts.buildBootstrapCore}/lib/mps-collections.jar" />
        <fileset file="${artifacts.buildBootstrapCore}/lib/mps-tuples.jar" />
        <fileset file="${artifacts.buildBootstrapCore}/lib/mps-core.jar" />
        <fileset file="${artifacts.buildBootstrapCore}/lib/mps-platform.jar" />
        <fileset file="${artifacts.buildBootstrapCore}/lib/mps-editor-api.jar" />
        <fileset file="${artifacts.buildBootstrapCore}/lib/mps-editor.jar" />
        <fileset file="${artifacts.buildBootstrapCore}/lib/mps-ui.jar" />
        <fileset file="${artifacts.buildBootstrapCore}/lib/mps-icons.jar" />
        <fileset file="${artifacts.buildWorkbench}/lib/mps-workbench.jar" />
        <fileset file="${artifacts.IDEA}/lib/annotations.jar" />
        <fileset file="${artifacts.IDEA}/lib/ecj-4.2.jar" />
        <fileset file="${artifacts.IDEA}/lib/jdom.jar" />
        <fileset file="${artifacts.IDEA}/lib/log4j.jar" />
        <fileset file="${artifacts.IDEA}/lib/trove4j.jar" />
        <fileset file="${artifacts.IDEA}/lib/xstream-1.4.3.jar" />
        <fileset file="${artifacts.IDEA}/lib/asm4-all.jar" />
        <fileset file="${artifacts.buildBootstrapCore}/lib/diffutils-1.2.1.jar" />
        <fileset dir="${artifacts.IDEA}/lib" includes="*.jar" />
        <path refid="path.jdk.classpath" />
      </classpath>
    </javac2>
    <copy todir="${build.tmp}/java/out/mps-make">
      <fileset dir="${mps_home}/plugins/mpsmake/source_gen" includes="**/*.properties, **/*.xml, **/*.html, **/*.png, **/*.txt, **/*.ico, **/*.zip, **/*.info" />
    </copy>
  </target>
</project>