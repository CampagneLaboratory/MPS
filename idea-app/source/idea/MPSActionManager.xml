<component xmlns:xi="http://www.w3.org/2001/XInclude">
  <xi:include href="/idea/PlatformActions.xml" xpointer="xpointer(/component/*)"/>
  <xi:include href="/idea/VcsActions.xml" xpointer="xpointer(/component/*)"/>

  <actions>
    <group>
      <action id="OpenProject" class="jetbrains.mps.idea.actions.OpenMPSProjectAction" text="Open MPS Project" />
      <add-to-group anchor="first" group-id="FileMenu" />
    </group>

    <group id="GenerateMenu" popup="true" text="Generate">
      <action id="SaveTransientModels" class="jetbrains.mps.idea.actions.generate.SaveTransientModelsAction" text="Save Transient Models" />
      <action id="GenerateCurrentModule" class="jetbrains.mps.idea.actions.generate.GenerateCurrentModuleAction" text="Generate Current Module">
        <keyboard-shortcut first-keystroke="control F9" keymap="$default"/>
      </action>
      <add-to-group group-id="MainMenu" anchor="after" relative-to-action="GoToMenu" />
    </group>

    <group>      
      <action id="GoToMPSRootAction" class="jetbrains.mps.idea.actions.goTo.GoToRootNodeAction" text="Go To Root Node">
        <keyboard-shortcut first-keystroke="control N" keymap="$default"/>
      </action>
      <add-to-group anchor="last" group-id="GoToMenu" />
    </group>
  </actions>
</component>