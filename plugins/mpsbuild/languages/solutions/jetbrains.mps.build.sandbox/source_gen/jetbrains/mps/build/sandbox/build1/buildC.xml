<project name="buildC" default="build" basedir="../">
  <property name="build.dir" location="build" />
  <property name="build.tmp" location="${build.dir}/tmp/buildC" />
  <property name="build.layout" location="${build.dir}/artifacts/buildC" />
  <property name="artifacts.buildB" location="subprojects/buildB/build/artifacts/buildB" />
  <property file="${artifacts.buildB}/variables.properties" prefix="import.buildB" />
  <property name="buildA.aver" value="${import.buildB.buildA.aver}" />
  
  <target name="assemble" depends="classes, fetchDependencies">
    <mkdir dir="${build.layout}/as" />
    <copy file="${artifacts.buildB}/result/A-${buildA.aver}/A/a.txt" todir="${build.layout}/as" />
    <echo file="${build.layout}/variables.properties">buildA.aver=${buildA.aver}</echo>
  </target>
  
  <target name="buildDependents">
    <ant antfile="subprojects/buildB/buildB.xml" inheritAll="false" useNativeBasedir="true" />
  </target>
  
  <target name="fetchDependencies" />
  
  <target name="build" depends="assemble, check" />
  
  <target name="clean">
    <delete dir="${build.tmp}" />
    <delete dir="${build.layout}" />
  </target>
  
  <target name="compileJava" />
  
  <target name="processResources" />
  
  <target name="classes" depends="compileJava, processResources" />
  
  <target name="test" depends="classes" />
  
  <target name="check" depends="test" />
</project>