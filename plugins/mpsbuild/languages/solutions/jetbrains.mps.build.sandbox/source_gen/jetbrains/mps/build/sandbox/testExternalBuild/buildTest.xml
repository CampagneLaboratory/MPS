<project name="buildTest" default="build" basedir="../../../">
  <property name="build.dir" location="build" />
  <property name="build.tmp" location="${build.dir}/tmp/buildTest" />
  <property name="build.layout" location="${build.dir}/artifacts/buildTest" />
  <property name="artifacts.buildMPS" location="../../../../build/artifacts/buildMPS" />
  <property file="${artifacts.buildMPS}/variables.properties" prefix="import.buildMPS" />
  <property name="buildMPS.build.number" value="${import.buildMPS.buildMPS.build.number}" />
  <property name="buildMPS.version" value="${import.buildMPS.buildMPS.version}" />
  <property name="buildMPS.build.vcs.number" value="${import.buildMPS.buildMPS.build.vcs.number}" />
  <property name="buildMPS.teamcity.buildConfName" value="${import.buildMPS.buildMPS.teamcity.buildConfName}" />
  
  <target name="assemble" depends="classes">
    <mkdir dir="${build.layout}/sandbox" />
    <mkdir dir="${build.tmp}/default/jetbrains.mps.build.tests.jar" />
    <mkdir dir="${build.tmp}/default/jetbrains.mps.build.tests.jar/META-INF" />
    <echoxml file="${build.tmp}/default/jetbrains.mps.build.tests.jar/META-INF/module.xml">
      <module namespace="jetbrains.mps.build.tests" type="solution" uuid="39742b07-848c-43a7-be0a-845055dd3333">
        <dependencies>
          <module ref="6354ebe7-c22a-4a0f-ac54-50b52ab9b065(JDK)" />
          <module ref="6ed54515-acc8-4d1e-a16c-9fd6cfe951ea(MPS.Core)" />
          <module ref="4c6a28d1-2c60-478d-b36e-db9b3cbb21fb(closures.runtime)" />
          <module ref="9b80526e-f0bf-4992-bdf5-cee39c1833f3(collections.runtime)" />
          <module ref="83f155ff-422c-4b5a-a2f2-b459302dd215(jetbrains.mps.baseLanguage.unitTest.libs)" />
          <module ref="707c4fde-f79a-44b5-b3d7-b5cef8844ccf(jetbrains.mps.lang.test.runtime)" />
        </dependencies>
        <sources jar="jetbrains.mps.build.tests-src.jar" descriptor="tests.msd" />
      </module>
    </echoxml>
    <jar destfile="${build.layout}/sandbox/jetbrains.mps.build.tests.jar">
      <fileset dir="${build.tmp}/java/out/jetbrains.mps.build.tests" />
      <fileset dir="${basedir}/jetbrains.mps.build.tests" includes="icons/**, resources/**" />
      <fileset dir="${build.tmp}/default/jetbrains.mps.build.tests.jar" />
    </jar>
    <jar destfile="${build.layout}/sandbox/jetbrains.mps.build.tests-src.jar">
      <fileset dir="${basedir}/jetbrains.mps.build.tests/source_gen" includes="**/*.java" />
      <zipfileset file="${basedir}/jetbrains.mps.build.tests/tests.msd" prefix="module" />
      <zipfileset dir="${basedir}/jetbrains.mps.build.tests/models" includes="**/*.mps, **/*.metadata, **/*.history" prefix="module/models" />
    </jar>
    <echo file="${build.layout}/variables.properties">buildMPS.build.number=${buildMPS.build.number}${line.separator}buildMPS.version=${buildMPS.version}${line.separator}buildMPS.build.vcs.number=${buildMPS.build.vcs.number}${line.separator}buildMPS.teamcity.buildConfName=${buildMPS.teamcity.buildConfName}</echo>
  </target>
  
  <target name="buildDependents">
    <ant antfile="../../../../build/buildMPS.xml" inheritAll="false" useNativeBasedir="true" />
  </target>
  
  <target name="fetchDependencies" />
  
  <target name="build" depends="assemble, check" />
  
  <target name="clean">
    <delete dir="${build.tmp}" />
    <delete dir="${build.layout}" />
  </target>
  
  <target name="compileJava" depends="java.compile.jetbrains.mps.build.tests" />
  
  <target name="processResources" />
  
  <target name="classes" depends="compileJava, processResources" />
  
  <target name="test" depends="classes" />
  
  <target name="check" depends="test" />
  
  <target name="java.compile.jetbrains.mps.build.tests" depends="fetchDependencies">
    <mkdir dir="${build.tmp}/java/out/jetbrains.mps.build.tests" />
    <javac destdir="${build.tmp}/java/out/jetbrains.mps.build.tests" fork="true" includeantruntime="false">
      <compilerarg value="-Xlint:none" />
      <src>
        <path location="${basedir}/jetbrains.mps.build.tests/source_gen" />
      </src>
      <classpath>
        <fileset file="${artifacts.buildMPS}/MPS ${buildMPS.version}/lib/mps-closures.jar" />
        <fileset file="${artifacts.buildMPS}/MPS ${buildMPS.version}/lib/mps-collections.jar" />
        <fileset file="${artifacts.buildMPS}/MPS ${buildMPS.version}/lib/mps-tuples.jar" />
        <fileset file="${artifacts.buildMPS}/MPS ${buildMPS.version}/lib/mps-core.jar" />
        <fileset file="${artifacts.buildMPS}/MPS ${buildMPS.version}/lib/mps-test.jar" />
        <fileset file="${artifacts.buildMPS}/MPS ${buildMPS.version}/lib/mps-editor-api.jar" />
        <fileset file="${artifacts.buildMPS}/MPS ${buildMPS.version}/lib/mps-editor.jar" />
        <fileset file="${artifacts.buildMPS}/MPS ${buildMPS.version}/lib/mps-platform.jar" />
        <fileset file="${artifacts.buildMPS}/MPS ${buildMPS.version}/lib/mps-backend.jar" />
        <fileset file="${artifacts.buildMPS}/MPS ${buildMPS.version}/languages/baseLanguage/jetbrains.mps.baseLanguage.unitTest.libs/bsh-core-2.0b4.jar" />
        <fileset file="${artifacts.buildMPS}/MPS ${buildMPS.version}/languages/baseLanguage/jetbrains.mps.baseLanguage.unitTest.libs/cglib-nodep-2.1_3.jar" />
        <fileset file="${artifacts.buildMPS}/MPS ${buildMPS.version}/languages/baseLanguage/jetbrains.mps.baseLanguage.unitTest.libs/hamcrest-core-1.1.jar" />
        <fileset file="${artifacts.buildMPS}/MPS ${buildMPS.version}/languages/baseLanguage/jetbrains.mps.baseLanguage.unitTest.libs/hamcrest-library-1.1.jar" />
        <fileset file="${artifacts.buildMPS}/MPS ${buildMPS.version}/languages/baseLanguage/jetbrains.mps.baseLanguage.unitTest.libs/jmock-2.5.1.jar" />
        <fileset file="${artifacts.buildMPS}/MPS ${buildMPS.version}/languages/baseLanguage/jetbrains.mps.baseLanguage.unitTest.libs/jmock-junit3-2.5.1.jar" />
        <fileset file="${artifacts.buildMPS}/MPS ${buildMPS.version}/languages/baseLanguage/jetbrains.mps.baseLanguage.unitTest.libs/jmock-junit4-2.5.1.jar" />
        <fileset file="${artifacts.buildMPS}/MPS ${buildMPS.version}/languages/baseLanguage/jetbrains.mps.baseLanguage.unitTest.libs/objenesis-1.0.jar" />
        <fileset file="${artifacts.buildMPS}/MPS ${buildMPS.version}/lib/ant/lib/ant.jar" />
        <fileset file="${artifacts.buildMPS}/MPS ${buildMPS.version}/lib/junit-4.10.jar" />
        <fileset file="${artifacts.buildMPS}/MPS ${buildMPS.version}/lib/org.eclipse.jdt.core_3.5.2.v_981_R35x.jar" />
        <fileset file="${artifacts.buildMPS}/MPS ${buildMPS.version}/lib/guava-11.0.1.jar" />
        <fileset file="${artifacts.buildMPS}/MPS ${buildMPS.version}/lib/jdom.jar" />
        <fileset file="${artifacts.buildMPS}/MPS ${buildMPS.version}/lib/log4j.jar" />
        <fileset file="${artifacts.buildMPS}/MPS ${buildMPS.version}/lib/trove4j.jar" />
        <fileset file="${artifacts.buildMPS}/MPS ${buildMPS.version}/lib/xstream.jar" />
        <fileset file="${artifacts.buildMPS}/MPS ${buildMPS.version}/lib/annotations.jar" />
        <fileset file="${artifacts.buildMPS}/MPS ${buildMPS.version}/lib/commons-lang-2.4.jar" />
        <fileset file="${artifacts.buildMPS}/MPS ${buildMPS.version}/lib/commons-logging-1.1.1.jar" />
        <fileset file="${artifacts.buildMPS}/MPS ${buildMPS.version}/lib/asm.jar" />
        <fileset file="${artifacts.buildMPS}/MPS ${buildMPS.version}/lib/diffutils-1.2.1.jar" />
        <fileset dir="${artifacts.buildMPS}/MPS ${buildMPS.version}/lib" includes="*.jar" />
        <fileset dir="${artifacts.buildMPS}/MPS ${buildMPS.version}/lib/ant/lib" includes="*.jar" />
        <fileset file="${artifacts.buildMPS}/MPS ${buildMPS.version}/plugins/mpsbuild/languages/jetbrains.mps.build.jar" />
        <fileset file="${artifacts.buildMPS}/MPS ${buildMPS.version}/plugins/mpsbuild/languages/jetbrains.mps.build.workflow.jar" />
        <fileset file="${artifacts.buildMPS}/MPS ${buildMPS.version}/languages/xml/jetbrains.mps.core.properties.jar" />
        <fileset file="${artifacts.buildMPS}/MPS ${buildMPS.version}/languages/xml/jetbrains.mps.core.xml.jar" />
        <fileset file="${artifacts.buildMPS}/MPS ${buildMPS.version}/languages/languageDesign/jetbrains.mps.lang.test.runtime.jar" />
        <fileset file="${artifacts.buildMPS}/MPS ${buildMPS.version}/languages/languageDesign/jetbrains.mps.lang.traceable.jar" />
      </classpath>
    </javac>
  </target>
</project>