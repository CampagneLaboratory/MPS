<project name="buildE" default="build" basedir="../">
  <property name="build.dir" location="build" />
  <property name="build.tmp" location="${build.dir}/tmp/buildE" />
  <property name="build.layout" location="${build.dir}/artifacts/buildE" />
  <property name="artifacts.buildA" location="${build.dir}/artifacts/buildA" />
  <property file="${artifacts.buildA}/variables.properties" prefix="import.buildA" />
  <property name="buildA.aver" value="${import.buildA.buildA.aver}" />
  
  <target name="assemble" depends="fetchDependencies">
    <mkdir dir="${build.layout}/Content" />
    <copy todir="${build.layout}/Content">
      <fileset dir="${build.tmp}/deps/buildA/A-_dl_{aver}.zip" />
    </copy>
    <zip destfile="${build.layout}/packedContent.zip">
      <fileset dir="${build.tmp}/deps/buildA/withX.zip" />
    </zip>
    <zip destfile="${build.layout}/packedContent2.zip">
      <fileset dir="${build.tmp}/deps/buildA/A-_dl_{aver}.zip" />
    </zip>
    <jar destfile="${build.layout}/repackagedClasses.jar">
      <fileset dir="${build.tmp}/deps/buildA/module-A.jar" />
    </jar>
    <zip destfile="${build.layout}/zippedJar.zip">
      <fileset file="${build.tmp}/deps/buildA/A-_dl_{aver}.zip/module-A.jar" />
    </zip>
    <mkdir dir="${build.layout}/Content2" />
    <copy todir="${build.layout}/Content2">
      <fileset dir="${artifacts.buildA}/result" />
    </copy>
    <echo file="${build.layout}/variables.properties">buildA.aver=${buildA.aver}</echo>
  </target>
  
  <target name="buildDependents">
    <ant antfile="buildA/buildA.xml" inheritAll="false" useNativeBasedir="true" />
  </target>
  
  <target name="fetchDependencies">
    <mkdir dir="${build.tmp}/deps/buildA/A-_dl_{aver}.zip" />
    <unzip src="${artifacts.buildA}/result/A-${buildA.aver}.zip" dest="${build.tmp}/deps/buildA/A-_dl_{aver}.zip" />
    <mkdir dir="${build.tmp}/deps/buildA/module-A.jar" />
    <unzip src="${build.tmp}/deps/buildA/A-_dl_{aver}.zip/module-A.jar" dest="${build.tmp}/deps/buildA/module-A.jar" />
    <mkdir dir="${build.tmp}/deps/buildA/withX.zip" />
    <unzip src="${build.tmp}/deps/buildA/A-_dl_{aver}.zip/withX.zip" dest="${build.tmp}/deps/buildA/withX.zip" />
  </target>
  
  <target name="build" depends="assemble" />
  
  <target name="clean">
    <delete dir="${build.tmp}" />
    <delete dir="${build.layout}" />
  </target>
</project>