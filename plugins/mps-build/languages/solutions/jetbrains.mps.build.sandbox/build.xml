<project name="testmanifest" default="build">
  <!-- Generated by MPS -->
  <property name="build.dir" location="build" />
  <property name="build.tmp" location="${build.dir}/tmp/testmanifest" />
  <property name="build.layout" location="${build.dir}/artifacts/testmanifest" />
  <tstamp>
    <format property="var" pattern="dd.mm.yy" />
  </tstamp>
  
  <target name="assemble" depends="classes">
    <mkdir dir="${build.layout}" />
    <manifest file="${build.layout}/MANIFEST.MF">
      <attribute name="name" value="attribute${var}fjsdkfjdk" />
      <attribute name="name2" value="value2" />
      <attribute name="name3" value="value3" />
    </manifest>
    <mkdir dir="${build.tmp}/default/some.jar" />
    <manifest file="${build.tmp}/default/MANIFEST.MF">
      <attribute name="name" value="value" />
      <attribute name="name2" value="value2" />
      <section name="sectionName">
        <attribute name="sectionAttribute" value="value" />
      </section>
    </manifest>
    <jar destfile="${build.layout}/some.jar" manifest="${build.tmp}/default/MANIFEST.MF">
      <fileset dir="${build.tmp}/default/some.jar" />
    </jar>
    <echo file="${build.layout}/build.properties">testmanifest.var=${var}</echo>
  </target>
  
  <target name="build" depends="assemble, check" />
  
  <target name="clean">
    <delete dir="${build.tmp}" />
    <delete dir="${build.layout}" />
  </target>
  
  <target name="compileJava" />
  
  <target name="processResources" />
  
  <target name="classes" depends="compileJava, processResources" />
  
  <target name="test" depends="classes" />
  
  <target name="check" depends="test" />
</project>